// ----- Fonts -----

& {
	font-family: 'Microsoft Yahei UI', '微软雅黑';


    kbd,
    pre,
    code {
        font-family: 'PT Mono', 'consolas', 'Courier New', monospace;
    }
}





// ----- Measurements -----

minxin-responsive-measurements(fontSizeAsRem) {
    & {
        padding: 2 * fontSizeAsRem 3 * fontSizeAsRem;
        line-height: 1.5;
    }

    h1 {
        margin-top:    8   * fontSizeAsRem !important;
        margin-bottom: 1.5 * fontSizeAsRem !important;
        font-size:     2.8 * fontSizeAsRem;
    }

    h2 {
        margin-top:    4   * fontSizeAsRem !important;
        margin-bottom: 1   * fontSizeAsRem !important;
        font-size:     1.8 * fontSizeAsRem;
    }

    h3 {
        margin-top:    3   * fontSizeAsRem !important;
        margin-bottom: 0.5 * fontSizeAsRem !important;
        font-size:     1.2 * fontSizeAsRem;
    }

    h4 {
        margin-top:    2   * fontSizeAsRem !important;
        margin-bottom: 0.5 * fontSizeAsRem !important;
        font-size:     1.1 * fontSizeAsRem;
    }

    h5 {
        margin-top:    1.5 * fontSizeAsRem !important;
        margin-bottom: 0.5 * fontSizeAsRem !important;
        font-size:     1   * fontSizeAsRem;
    }

    pre {
        font-size: 1 * fontSizeAsRem;
    }

    kbd,
    pre,
    code {
        border-radius: 0.25 * fontSizeAsRem !important;
    }

    table,
    p,
    li,
    dd {
        font-size: 1 * fontSizeAsRem;
    }
}

defaultFontSizeAsRem = 24px;
smallFontSizeAsRemInNarrowWindow = 18px;
articleBlockMaxWidthMeasuredInCharsCount = 60;

articleBlockMaxWidth = defaultFontSizeAsRem * articleBlockMaxWidthMeasuredInCharsCount;

& {
    minxin-responsive-measurements(fontSizeAsRem: defaultFontSizeAsRem);
}

@media screen and (max-width: articleBlockMaxWidth) {
    minxin-responsive-measurements(fontSizeAsRem: smallFontSizeAsRemInNarrowWindow);
}



& {
    box-sizing: content-box !important;
    max-width: articleBlockMaxWidth;
    margin: auto;
	line-height: 1.5;

    h1 {
        font-weight: 300;
    }

    h2 {
        font-weight: 300;
    }

    h3 {
        font-weight: 500;
    }

    h4 {
        font-weight: 500;
    }

    h5 {
        font-weight: 600;
    }

    small {
        font-size: .707em;
    }



    // Horizontal Alignments
    h1, h2, h3, h4, h5, h6, dt {
        margin-left:  -0.5rem;
        margin-right: -0.5rem;
        padding:       0.5rem;
    }

    ul,
    ol,
    p,
    dd {
        margin-left:  0.5rem;
        margin-right: 0.5rem;
    }

    pre {
        padding: 0 !important;
        margin-left: 1rem;
        margin-right: 1rem;
    }

    table pre:last-child {
        margin-bottom: 0;
    }

    blockquote {
        margin-left: 2.5rem;
        margin-right: 1.5rem;

        ul,
        ol,
        p,
        dd {
            margin-left: 0;
            margin-right: 0;
        }

        pre {
            margin-left: 0.5rem;
            margin-right: 0.5rem;
        }
    }




    // So-called "local" Measurements
    hr {
        margin: 1rem 0;
        padding: 0;
        height 0;
        overflow hidden;
        border-width: 1px 0 0;
        border-style: solid;
    }

    img {
        border-style: solid;
        border-width: 8px;
    }

    a, code {
        font-size: inherit !important;
    }

    h1, h2, h3, h4, h5, h6, dt {
        text-align: left;
        border-width: 0;
    }

    ul,
    ol,
    dl,
    blockquote {
        margin-top: 0.5em;
        margin-bottom: 1.5em;
    }

    p {
        margin-top: 0.25em;
        margin-bottom: 0.25em;
        padding: 0.25em 0.5em;
    }

    li {
        margin: 1em 0 2em;
    }

    ul,
    ol {
        padding-left: 3em;
    }

    blockquote, table {
        padding: 0.5em 1em;
        border-left-width: 0.25em;

        ul,
        ol,
        dl,
        li {
            &:last-child {
                margin-bottom: 0 !important;
            }
        }
    }

    code {
        display inline-block;
        font-weight: normal;
        font-style: normal;
        border-width: 1px;
        border-style: solid;
        padding: 0.25em  0.5em;
        margin:     0    0.25em;
    }

    pre {
        overflow-x: scroll;

        code {
            line-height: 1.25;
            border-width: 0;
            display: block;

            > * {
                line-height: 1.25;
                padding: 0;
            }
        }
    }



    // Usually is an <H1>
    :first-child {
        margin-top: 0 !important;
    }
}