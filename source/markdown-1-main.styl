// ----- Fonts -----

& {
	font-family: 'Microsoft Yahei UI', '微软雅黑';


    kbd,
    pre,
    code {
        font-family: 'PT Mono', 'consolas', 'Courier New', monospace;
    }
}





// ----- Measurements -----

minxin-responsive-measurements(fontSizeAsRem) {
    & {
        padding: 2 * fontSizeAsRem 3 * fontSizeAsRem;
        line-height: 1.5;
    }

    h1 {
        margin-top:    8   * fontSizeAsRem !important;
        margin-bottom: 1.5 * fontSizeAsRem !important;
        font-size:     2.8 * fontSizeAsRem;
    }

    h2 {
        margin-top:    4   * fontSizeAsRem !important;
        margin-bottom: 1   * fontSizeAsRem !important;
        font-size:     1.8 * fontSizeAsRem;
    }

    h3 {
        margin-top:    3   * fontSizeAsRem !important;
        margin-bottom: 0.5 * fontSizeAsRem !important;
        font-size:     1.2 * fontSizeAsRem;
    }

    h4 {
        margin-top:    2   * fontSizeAsRem !important;
        margin-bottom: 0.5 * fontSizeAsRem !important;
        font-size:     1.1 * fontSizeAsRem;
    }

    h5 {
        margin-top:    1.5 * fontSizeAsRem !important;
        margin-bottom: 0.5 * fontSizeAsRem !important;
        font-size:     1   * fontSizeAsRem;
    }

    pre {
        font-size: 1 * fontSizeAsRem;
    }

    kbd,
    pre,
    code {
        border-radius: 0.25 * fontSizeAsRem !important;
    }

    table,
    p,
    li,
    dd {
        font-size: 1 * fontSizeAsRem;
    }
}

defaultFontSizeAsRem = 24px;
smallFontSizeAsRemInNarrowWindow = 18px;
articleBlockMaxWidthMeasuredInCharsCount = 60;

articleBlockMaxWidth = defaultFontSizeAsRem * articleBlockMaxWidthMeasuredInCharsCount;

& {
    minxin-responsive-measurements(fontSizeAsRem: defaultFontSizeAsRem);
}

@media screen and (max-width: articleBlockMaxWidth) {
    minxin-responsive-measurements(fontSizeAsRem: smallFontSizeAsRemInNarrowWindow);
}



& {
    box-sizing: content-box !important;
    max-width: articleBlockMaxWidth;
    margin: auto;
	line-height: 1.5;

    a, code {
        font-size: inherit !important;
    }

    h6,
    h5,
    h4,
    h3,
    h2,
    h1 {
        text-align: left;
        border-width: 0;
    }

    h1 {
        font-weight: 300;
    }

    h2 {
        font-weight: 300;
    }

    h3 {
        font-weight: 500;
    }

    h4 {
        font-weight: 500;
    }

    h5 {
        font-weight: 600;
    }

    small {
        font-size: .707em;
    }



    // Horizontal Alignments
    h6,
    h5,
    h4,
    h3,
    h2,
    h1 {
        margin-left:  -0.5rem;
        margin-right: -0.5rem;
        padding:       0.5rem;
    }

    ul,
    ol,
    p,
    dd {
        margin-left:  0.5rem;
        margin-right: 0.5rem;
    }

    pre {
        padding: 0 !important;
        margin-left: 1rem;
        margin-right: 1rem;
    }

    blockquote {
        margin-left: 2.5rem;
        margin-right: 1.5rem;

        ul,
        ol,
        p,
        dd {
            margin-left: 0;
            margin-right: 0;
        }

        pre {
            margin-left: 0.5rem;
            margin-right: 0.5rem;
        }
    }




    // So-called "local" Measurements
    img {
        border-style: solid;
        border-width: 8px;
    }

    ul,
    ol,
    dl,
    blockquote {
        margin-top: 0.5em;
        margin-bottom: 1.5em;
    }

    p {
        margin-top: 0.25em;
        margin-bottom: 0.25em;
        padding: 0.25em 0.5em;
    }

    ul,
    ol {
        padding-left: 3em;
    }

    li {
        margin: 0.75em 0;
    }

    blockquote {
        padding: 0.5em 1em;
        border-left-width: 0.25em;

        ul,
        ol,
        dl,
        li {
            &:last-child {
                margin-bottom: 0 !important;
            }
        }
    }

    code {
        display inline-block;
        border-width: 1px;
        border-style: solid;
        padding: 0.25em  0.5em;
        margin:     0    0.25em;
    }

    pre {
        overflow-x: scroll;

        code {
            line-height: 1.25;
            border-width: 0;
            display: block;

            > * {
                line-height: 1.25;
                padding: 0;
            }
        }
    }



    // Usually is an <H1>
    :first-child {
        margin-top: 0 !important;
    }
}





// ----- Shading -----

& {
    // Those !important directives below
    // are for Microsoft Visual Studio Code Previews Environment.
    chiefColor1 = #1faced !important;
    chiefColor1Active = (chiefColor1 + 10%) !important;

    inlineCodeColor = #875179 !important;

    & {
        background-color: #d3d3d3;
    }

    h6, h5, h4, h3, h2, h1, dt {
        color: black;
    }

    &, p, li, dd, blockquote, table {
        color #333;

        > code {
            color: inlineCodeColor;
            border-color:     rgba(black, 0.219);
            background-color: rgba(white, 0.319);
        }
    }

    table, td, th {
        border-color: #999 !important;
    }

    pre {
        code {
            color: white;
            background-color: rgba(black, 1);

            > * {
                background-color: transparent !important;
            }
        }
    }

    blockquote {
        background-color: rgba(#888, 0.1) !important;
        border-color: chiefColor1;
    }

    a {
        &,
        &:visited {
            color: chiefColor1;
        }

        &:hover,
        &:focus,
        &:active {
            color: chiefColor1Active;
        }
    }

    img {
        border-color: rgba(#888, 0.5);
    }
}